FROM node:18-slim

# Set working directory
WORKDIR /app

# Copy backend package files
COPY backend/package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy backend source
COPY backend/ .

# Build TypeScript
RUN npm run build

# Set environment variables
ENV NODE_ENV=production

# Expose port
EXPOSE 3001

# Start command
CMD ["node", "dist/index.js"] 
