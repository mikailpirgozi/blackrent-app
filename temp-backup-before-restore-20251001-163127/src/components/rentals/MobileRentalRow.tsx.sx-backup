/**
 * 📱 MOBILE RENTAL ROW COMPONENT - ENHANCED VERSION
 *
 * Optimalizovaný pre mobilné zariadenia s kartovým dizajnom:
 * - Zachováva všetky existujúce funkcie
 * - Väčšie fonty a tlačidlá (touch-friendly)
 * - Lepšie rozloženie informácií
 * - Kartový dizajn namiesto tabuľkového riadku
 * - React.memo pre performance
 */

import {
/* Tailwind classes used for styling */
  Business as BusinessIcon,
  DirectionsCar as CarIcon,
  Check as CheckIcon,
  ContentCopy as ContentCopyIcon,
  Delete as DeleteIcon,
  Email as EmailIcon,
  Phone as PhoneIcon,
  Schedule as ScheduleIcon,
} from '@mui/icons-material';
import { Button,
  Card,
  CardContent,
  Chip,
  Fade,
  IconButton,
  Typography, } from '@mui/material';
import React, { memo } from 'react';
import { formatDateTime } from '../../utils/formatters';
import PriceDisplay from './components/PriceDisplay';

import type { Rental, Vehicle } from '../../types';

interface MobileRentalRowProps {
  rental: Rental;
  vehicle: Vehicle | undefined;
  index: number;
  totalRentals: number;
  hasHandover: boolean;
  hasReturn: boolean;
  isLoadingProtocolStatus: boolean;
  protocolStatusLoaded: boolean;
  onEdit: (rental: Rental) => void;
  onOpenProtocolMenu: (rental: Rental, type: 'handover' | 'return') => void;
  onCheckProtocols: (rental: Rental) => void;
  onDelete?: (id: string) => void;
  onClone?: (rental: Rental) => void; // 🔄 NOVÉ: Clone funkcionalita
}

export const MobileRentalRow = memo<MobileRentalRowProps>(
  ({
    rental,
    vehicle,
    index,
    // totalRentals, // TODO: Implement total rentals display
    hasHandover,
    hasReturn,
    isLoadingProtocolStatus,
    protocolStatusLoaded,
    onEdit,
    onOpenProtocolMenu,
    onCheckProtocols,
    onDelete,
    onClone, // 🔄 NOVÉ: Clone funkcionalita
  }) => {
    // 🎯 Memoized handlers to prevent recreation
    const handleCardClick = React.useCallback(() => {
      onEdit(rental);
    }, [rental, onEdit]);

    const handleHandoverClick = React.useCallback(
      (e: React.MouseEvent) => {
        e.stopPropagation();
        onOpenProtocolMenu(rental, 'handover');
      },
      [rental, onOpenProtocolMenu]
    );

    const handleReturnClick = React.useCallback(
      (e: React.MouseEvent) => {
        e.stopPropagation();
        onOpenProtocolMenu(rental, 'return');
      },
      [rental, onOpenProtocolMenu]
    );

    const handleProtocolCheck = React.useCallback(
      (e: React.MouseEvent) => {
        e.stopPropagation();
        onCheckProtocols(rental);
      },
      [rental, onCheckProtocols]
    );

    const handleDeleteClick = React.useCallback(
      (e: React.MouseEvent) => {
        e.stopPropagation();
        if (onDelete) onDelete(rental.id);
      },
      [rental.id, onDelete]
    );

    // 🔄 CLONE HANDLER
    const handleCloneClick = React.useCallback(
      (e: React.MouseEvent) => {
        e.stopPropagation();
        if (onClone) onClone(rental);
      },
      [rental, onClone]
    );

    // 🎨 Status helpers
    const getStatusColor = () => {
      switch (rental.status) {
        case 'active':
          return '#4caf50';
        case 'finished':
          return '#2196f3';
        case 'pending':
          return '#ff9800';
        default:
          return '#757575';
      }
    };

    const getStatusLabel = () => {
      switch (rental.status) {
        case 'active':
          return 'AKTÍVNY';
        case 'finished':
          return 'UKONČENÝ';
        case 'pending':
          return 'ČAKAJÚCI';
        default:
          return 'NOVÝ';
      }
    };

    // 🔄 Detekcia flexibilného prenájmu
    const isFlexible = rental.isFlexible || false;

    return (
      <Fade in timeout={300 + index * 50}>
        <Card
          sx={{
            mb: 1.5, // Menší spacing medzi kartami
            borderRadius: 2, // Menší border radius
            boxShadow: '0 2px 8px rgba(0,0,0,0.08)', // Jemnejší shadow
            border: isFlexible
              ? '2px solid #ff9800'
              : '1px solid rgba(0,0,0,0.06)',
            cursor: 'pointer',
            transition: 'all 0.3s ease',
            backgroundColor: isFlexible ? '#fff8f0' : 'white',
            '&:hover': {
              boxShadow: '0 4px 16px rgba(0,0,0,0.12)',
              transform: 'translateY(-1px)', // Menší hover efekt
            },
            '&:active': {
              transform: 'translateY(0px)',
              boxShadow: '0 2px 8px rgba(0,0,0,0.1)',
            },
          }}
          onClick={handleCardClick}
        >
          <CardContent className="p-4">
            {/* 🚗 HLAVIČKA S VOZIDLOM A STATUSOM */}
            <div
              className="/* TODO: Convert display: flex */ /* TODO: Convert justifyContent: space-between */ /* TODO: Convert alignItems: flex-start */ /* TODO: Convert mb: 1.5 */"
            >
              <div className="/* TODO: Convert flex: 1 */">
                <Typography
                  variant="h6"
                  className="/* TODO: Convert fontWeight: 700 */ /* TODO: Convert fontSize: 1rem */ /* TODO: Convert color: #1976d2 */ /* TODO: Convert mb: 0.25 */ /* TODO: Convert display: flex */ /* TODO: Convert alignItems: center */ gap-2"
                >
                  <CarIcon fontSize="small" />
                  {vehicle?.licensePlate || 'N/A'}
                </Typography>
                <Typography
                  variant="body2"
                  className="/* TODO: Convert color: #666 */ /* TODO: Convert fontSize: 0.85rem */ /* TODO: Convert mb: 0.25 */"
                >
                  {vehicle?.brand} {vehicle?.model}
                </Typography>
                {/* 🏢 FIRMA - VŽDY VIDITEĽNÁ */}
                {vehicle?.company && (
                  <Typography
                    variant="body2"
                    className="/* TODO: Convert color: #ff9800 */ /* TODO: Convert fontSize: 0.8rem */ /* TODO: Convert fontWeight: 600 */ /* TODO: Convert display: flex */ /* TODO: Convert alignItems: center */ gap-1 /* TODO: Convert mb: 0.25 */"
                  >
                    <BusinessIcon fontSize="small" />
                    {vehicle?.company}
                  </Typography>
                )}
              </div>

              <div
                className="/* TODO: Convert display: flex */ /* TODO: Convert flexDirection: column */ /* TODO: Convert alignItems: flex-end */ gap-2"
              >
                <Chip
                  label={getStatusLabel()}
                  size="medium" // Väčší chip
                  className="/* TODO: Convert bgcolor: getStatusColor() */ /* TODO: Convert color: white */ /* TODO: Convert fontWeight: 600 */ /* TODO: Convert fontSize: 0.8rem */ /* TODO: Convert // Väčší font
                    height: 32 */"
                />
                {isFlexible && (
                  <Chip
                    label="FLEXIBILNÝ"
                    size="medium"
                    className="/* TODO: Convert bgcolor: #ff9800 */ /* TODO: Convert color: white */ /* TODO: Convert fontWeight: 600 */ /* TODO: Convert fontSize: 0.75rem */ /* TODO: Convert height: 28 */"
                  />
                )}
              </div>
            </div>

            {/* 👤 ZÁKAZNÍK - KOMPAKTNEJŠIE */}
            <div className="/* TODO: Convert mb: 1.5 */">
              <Typography
                variant="subtitle1"
                className="/* TODO: Convert fontWeight: 600 */ /* TODO: Convert fontSize: 0.95rem */ /* TODO: Convert color: #333 */ /* TODO: Convert mb: 0.25 */ /* TODO: Convert display: flex */ /* TODO: Convert alignItems: center */ gap-2"
              >
                <div
                  className="/* TODO: Convert width: 6 */ /* TODO: Convert height: 6 */ /* TODO: Convert borderRadius: 50% */ /* TODO: Convert bgcolor: #4caf50 */"
                />
                {rental.customerName}
              </Typography>

              {/* 📞 TELEFÓN A EMAIL - V JEDNOM RIADKU */}
              <div
                className="/* TODO: Convert display: flex */ /* TODO: Convert flexWrap: wrap */ gap-4 /* TODO: Convert alignItems: center */"
              >
                {(rental.customerPhone || rental.customer?.phone) && (
                  <Typography
                    variant="body2"
                    className="/* TODO: Convert color: #666 */ /* TODO: Convert fontSize: 0.8rem */ /* TODO: Convert display: flex */ /* TODO: Convert alignItems: center */ gap-1"
                  >
                    <PhoneIcon fontSize="small" />
                    {rental.customerPhone || rental.customer?.phone}
                  </Typography>
                )}

                {(rental.customerEmail || rental.customer?.email) && (
                  <Typography
                    variant="body2"
                    className="/* TODO: Convert color: #666 */ /* TODO: Convert fontSize: 0.8rem */ /* TODO: Convert display: flex */ /* TODO: Convert alignItems: center */ gap-1"
                  >
                    <EmailIcon fontSize="small" />
                    {rental.customerEmail || rental.customer?.email}
                  </Typography>
                )}
              </div>
            </div>

            {/* 📅 DÁTUMY A CENA - KOMPAKTNEJŠIE */}
            <div
              className="/* TODO: Convert display: flex */ /* TODO: Convert justifyContent: space-between */ /* TODO: Convert alignItems: center */ /* TODO: Convert mb: 2 */ p-3 /* TODO: Convert bgcolor: #f8f9fa */ rounded-md"
            >
              <div>
                <Typography
                  variant="body2"
                  className="/* TODO: Convert color: #666 */ /* TODO: Convert fontSize: 0.75rem */ /* TODO: Convert mb: 0.25 */"
                >
                  Obdobie prenájmu
                </Typography>
                <Typography
                  variant="body1"
                  className="/* TODO: Convert fontWeight: 700 */ /* TODO: Convert fontSize: 0.95rem */ /* TODO: Convert color: #1976d2 */ /* TODO: Convert lineHeight: 1.3 */ /* TODO: Convert mb: 0.25 */"
                >
                  📅 {formatDateTime(rental.startDate)}
                </Typography>
                <Typography
                  variant="body1"
                  className="/* TODO: Convert fontWeight: 700 */ /* TODO: Convert fontSize: 0.95rem */ /* TODO: Convert color: #f57c00 */ /* TODO: Convert lineHeight: 1.3 */"
                >
                  🏁 {formatDateTime(rental.endDate)}
                </Typography>
              </div>

              <div className="/* TODO: Convert textAlign: right */">
                <Typography
                  variant="body2"
                  className="/* TODO: Convert color: #666 */ /* TODO: Convert fontSize: 0.75rem */ /* TODO: Convert mb: 0.25 */"
                >
                  Celková cena
                </Typography>
                <PriceDisplay
                  rental={rental}
                  variant="mobile"
                  showExtraKm={true}
                />
              </div>
            </div>

            {/* 🔧 PROTOKOLY - KOMPAKTNEJŠIE TLAČIDLÁ */}
            <div
              className="/* TODO: Convert display: flex */ gap-3 /* TODO: Convert mb: 1.5 */"
            >
              <Button
                variant={hasHandover ? 'contained' : 'outlined'}
                size="large"
                fullWidth
                onClick={handleHandoverClick}
                startIcon={hasHandover ? <CheckIcon /> : <ScheduleIcon />}
                sx={{
                  height: 42, // Kompaktnejšie tlačidlo
                  fontSize: '0.85rem',
                  fontWeight: 600,
                  bgcolor: hasHandover ? '#4caf50' : 'transparent',
                  borderColor: hasHandover ? '#4caf50' : '#ff9800',
                  color: hasHandover ? 'white' : '#ff9800',
                  '&:hover': {
                    bgcolor: hasHandover ? '#388e3c' : 'rgba(255,152,0,0.1)',
                    transform: 'scale(1.02)',
                    boxShadow: hasHandover
                      ? '0 4px 12px rgba(76,175,80,0.3)'
                      : '0 4px 12px rgba(255,152,0,0.2)',
                  },
                  transition: 'all 0.2s ease',
                }}
              >
                {hasHandover ? 'Odovzdané' : 'Odovzdať'}
              </Button>

              <Button
                variant={hasReturn ? 'contained' : 'outlined'}
                size="large"
                fullWidth
                onClick={handleReturnClick}
                startIcon={hasReturn ? <CheckIcon /> : <ScheduleIcon />}
                sx={{
                  height: 42, // Kompaktnejšie tlačidlo
                  fontSize: '0.85rem',
                  fontWeight: 600,
                  bgcolor: hasReturn ? '#4caf50' : 'transparent',
                  borderColor: hasReturn ? '#4caf50' : '#ff9800',
                  color: hasReturn ? 'white' : '#ff9800',
                  '&:hover': {
                    bgcolor: hasReturn ? '#388e3c' : 'rgba(255,152,0,0.1)',
                    transform: 'scale(1.02)',
                    boxShadow: hasReturn
                      ? '0 4px 12px rgba(76,175,80,0.3)'
                      : '0 4px 12px rgba(255,152,0,0.2)',
                  },
                  transition: 'all 0.2s ease',
                }}
              >
                {hasReturn ? 'Prevzaté' : 'Prevziať'}
              </Button>
            </div>

            {/* 📝 POZNÁMKY - AK EXISTUJÚ */}
            {rental.notes && (
              <div className="/* TODO: Convert mb: 1.5 */">
                <Typography
                  variant="body2"
                  className="/* TODO: Convert color: #333 */ /* TODO: Convert bgcolor: #f5f5f5 */ p-3 rounded /* TODO: Convert fontSize: 0.8rem */ /* TODO: Convert border: 1px solid #e0e0e0 */"
                >
                  📝 {rental.notes}
                </Typography>
              </div>
            )}

            {/* 🔍 PROTOKOL CHECK & PLATBA STATUS & DELETE - KOMPAKTNE V JEDNOM RIADKU */}
            <div
              className="/* TODO: Convert display: flex */ /* TODO: Convert justifyContent: space-between */ /* TODO: Convert alignItems: center */"
            >
              {/* Protokol check */}
              {isLoadingProtocolStatus ? (
                <Button
                  variant="outlined"
                  size="small"
                  disabled
                  className="/* TODO: Convert borderColor: #ff9800 */ /* TODO: Convert color: #ff9800 */ /* TODO: Convert fontSize: 0.75rem */ /* TODO: Convert height: 32 */"
                >
                  Načítavam...
                </Button>
              ) : !protocolStatusLoaded ? (
                <Button
                  variant="outlined"
                  size="small"
                  onClick={handleProtocolCheck}
                  sx={{
                    borderColor: '#2196f3',
                    color: '#2196f3',
                    fontSize: '0.75rem',
                    height: 32,
                    '&:hover': {
                      bgcolor: 'rgba(33,150,243,0.1)',
                    },
                  }}
                >
                  Skontrolovať
                </Button>
              ) : (
                <div /> // Prázdny box pre spacing
              )}

              {/* Platba status + Delete tlačidlo v jednom riadku */}
              <div className="/* TODO: Convert display: flex */ /* TODO: Convert alignItems: center */ gap-2">
                <Chip
                  label={rental.paid ? 'Uhradené' : 'Neuhradené'}
                  size="small"
                  className="/* TODO: Convert height: 24 */ /* TODO: Convert fontSize: 0.7rem */ /* TODO: Convert bgcolor: rental.paid ? #4caf50 : #f44336 */ /* TODO: Convert color: white */ /* TODO: Convert fontWeight: 500 */"
                />

                {/* 🔄 CLONE TLAČIDLO - VEDĽA PLATBY */}
                {onClone && (
                  <IconButton
                    onClick={handleCloneClick}
                    title="Kopírovať prenájom na ďalšie obdobie"
                    sx={{
                      color: '#4caf50',
                      width: 32,
                      height: 32,
                      '&:hover': {
                        bgcolor: 'rgba(76,175,80,0.1)',
                        transform: 'scale(1.1)',
                      },
                      transition: 'all 0.2s ease',
                    }}
                  >
                    <ContentCopyIcon fontSize="small" />
                  </IconButton>
                )}

                {/* 🗑️ DELETE TLAČIDLO - VEDĽA PLATBY */}
                {onDelete && (
                  <IconButton
                    onClick={handleDeleteClick}
                    sx={{
                      color: '#f44336',
                      width: 32,
                      height: 32,
                      '&:hover': {
                        bgcolor: 'rgba(244,67,54,0.1)',
                        transform: 'scale(1.1)',
                      },
                      transition: 'all 0.2s ease',
                    }}
                  >
                    <DeleteIcon fontSize="small" />
                  </IconButton>
                )}
              </div>
            </div>
          </CardContent>
        </Card>
      </Fade>
    );
  }
);

MobileRentalRow.displayName = 'MobileRentalRow';
