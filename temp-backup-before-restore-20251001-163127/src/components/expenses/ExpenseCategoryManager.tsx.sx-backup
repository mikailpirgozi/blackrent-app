                  setFormData(prev => ({ ...prev, name: e.target.value }))
                }
                helperText="Automaticky generovan√Ω z zobrazovan√©ho n√°zvu"
                disabled={!!editingCategory} // Nemo≈æno meni≈• pri √∫prave
              />
            </Grid>

            <Grid item xs={12}>
              <TextField
                fullWidth
