  { value: 'computer', label: 'Poƒç√≠taƒç', icon: 'üíª' },
  { value: 'flight', label: 'Let', icon: '‚úàÔ∏è' },
  { value: 'hotel', label: 'Hotel', icon: 'üè®' },
