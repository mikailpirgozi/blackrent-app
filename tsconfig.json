{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "webworker",
      "es2015",
      "es2017",
      "es2018",
      "es2019",
      "es2020"
    ],
    "types": ["node", "vite/client"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    
    // âš¡ PERFORMANCE & QUALITY: Additional strict flags
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "src/vite-env.d.ts",
    "src/@types/**/*",
    "vite.config.ts",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/__tests__",
    "src/setupTests.ts",
    "src/test",
    "src/components/common/SkeletonLoader.tsx",
    "src/components/common/LoadingStates.tsx",
    "src/components/insurances/VehicleCentricInsuranceList.tsx",
    "src/components/rentals/RentalList.tsx",
    "src/components/settlements/SettlementDetail.tsx",
    "src/components/vehicles/VehicleImage.tsx",
    "src/components/Statistics.tsx",
    "src/components/leasings/LeasingForm.tsx",
    "src/components/users/CreateUserWithPermissions.tsx",
    "src/utils/leasing/PaymentScheduleGenerator.ts"
  ]
}
