# BlackRent Mobile App - Environment Configuration Template
# Copy this file to .env and fill in the values

# ============================================================================
# API Configuration
# ============================================================================
EXPO_PUBLIC_API_URL=https://your-api-url.railway.app
EXPO_PUBLIC_WEBSOCKET_URL=wss://your-api-url.railway.app

# ============================================================================
# Stripe Payment Configuration (Add when ready for production)
# ============================================================================
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx_or_pk_live_xxx
EXPO_PUBLIC_STRIPE_MERCHANT_ID=merchant.com.yourcompany

# ============================================================================
# Image Service Configuration
# ============================================================================
# Options: picsum (free, no key), unsplash (requires key), local (assets only)
EXPO_PUBLIC_IMAGE_SERVICE=picsum
EXPO_PUBLIC_ENABLE_IMAGE_FALLBACK=true

# Optional: Unsplash Access Key (if you want high-quality stock photos)
# Get it from: https://unsplash.com/developers
# EXPO_PUBLIC_UNSPLASH_ACCESS_KEY=your_access_key_here

# ============================================================================
# App Configuration
# ============================================================================
EXPO_PUBLIC_APP_NAME=BlackRent
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_ENVIRONMENT=development

# ============================================================================
# Feature Flags
# ============================================================================
EXPO_PUBLIC_ENABLE_PAYMENTS=false
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=false

# ============================================================================
# Debug Configuration
# ============================================================================
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=info
