{
  "name": "blackrent-monorepo",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:backend\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:customer": "cd apps/customer-website && npm run dev",
    "dev:mobile": "cd apps/mobile && expo start",
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:backend\" \"npm run dev:customer\"",
    "build": "npm run build:web && npm run build:backend && npm run build:customer",
    "build:web": "cd apps/web && npm run build",
    "build:backend": "cd apps/backend && npm run build",
    "build:customer": "cd apps/customer-website && npm run build",
    "test": "npm run test:web && npm run test:backend",
    "test:run": "npm run test:run:web && npm run test:run:backend",
    "test:web": "cd apps/web && npm run test",
    "test:run:web": "cd apps/web && npm run test:run",
    "test:backend": "cd apps/backend && npm run test",
    "test:run:backend": "cd apps/backend && npm run test:run",
    "lint": "npm run lint:web && npm run lint:backend",
    "lint:web": "cd apps/web && npm run lint",
    "lint:backend": "cd apps/backend && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "rm -rf node_modules apps/*/node_modules",
    "install:all": "npm install && npm run install:apps",
    "install:apps": "cd apps/web && npm install && cd ../backend && npm install && cd ../customer-website && npm install && cd ../mobile && npm install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-vitest": "^0.5.4",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "description": "BlackRent - Monorepo for car rental platform with web, mobile, backend and customer website",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikailpirgozi/blackrent-app.git"
  },
  "author": "BlackRent Team",
  "license": "MIT"
}
