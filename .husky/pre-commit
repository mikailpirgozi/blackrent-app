#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run lint-staged for formatting and linting
npx lint-staged

# TypeScript check for frontend
echo "ğŸ” TypeScript check (frontend)..."
cd apps/web && pnpm typecheck > /dev/null 2>&1 || {
  echo "âŒ Frontend TypeScript errors found! Run 'cd apps/web && pnpm typecheck' to see details."
  exit 1
}
cd ../..

# TypeScript check for backend
echo "ğŸ” TypeScript check (backend)..."
cd backend && npm run build > /dev/null 2>&1 || {
  echo "âŒ Backend TypeScript errors found! Run 'cd backend && npm run build' to see details."
  exit 1
}
cd ..

echo "âœ… All checks passed!"