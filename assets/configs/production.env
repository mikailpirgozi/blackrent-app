# Blackrent Production Environment Configuration
# Skopírujte do .env a upravte hodnoty podľa vašej domény

# Databáza
DB_USER=blackrent_user
DB_PASSWORD=zmenit-na-silne-heslo-123!
DB_HOST=postgres
DB_PORT=5432
DB_NAME=blackrent

# JWT Secret (vygenerujte nový: openssl rand -base64 32)
JWT_SECRET=vygenerujte-novy-super-silny-jwt-secret-key-pre-produkciu

# Server
APP_PORT=5001
NODE_ENV=production

# Nginx porty
NGINX_PORT=80
NGINX_SSL_PORT=443

# Frontend URL (vaša doména)
FRONTEND_URL=https://vasa-domena.sk

# SSL certifikáty (pre Let's Encrypt)
SSL_EMAIL=admin@vasa-domena.sk
DOMAIN=vasa-domena.sk

# Monitoring (voliteľné)
ENABLE_MONITORING=true

# Backup
BACKUP_RETENTION_DAYS=7 