# ========================================
# üîß BLACKRENT LOCALHOST CONFIGURATION
# ========================================
# Copy this file to .env and update the values

# ========================================
# üìä DATABASE CONFIGURATION
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=blackrent
DB_USER=postgres
DB_PASSWORD=password

# ========================================
# üîê AUTHENTICATION
# ========================================
JWT_SECRET=blackrent-super-secret-jwt-key-2024

# ========================================
# üöÄ SERVER CONFIGURATION
# ========================================
PORT=3001
NODE_ENV=development

# ========================================
# üì¶ CLOUDFLARE R2 STORAGE
# ========================================
# Get these credentials from Railway/Vercel or Cloudflare Dashboard
R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=blackrent-storage
R2_ACCOUNT_ID=your-account-id
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev

# Optional: Set to false to force R2 usage (default: true = local storage)
# FORCE_LOCAL_STORAGE=false

# ========================================
# üìß EMAIL RECEIVING (IMAP)
# ========================================
# Configuration for monitoring incoming emails from orders
IMAP_HOST=imap.m1.websupport.sk
IMAP_PORT=993
IMAP_USER=info@blackrent.sk
IMAP_PASSWORD=your-email-password-here
IMAP_ENABLED=true
IMAP_AUTO_START=false

# ========================================
# üì® EMAIL SENDING (SMTP)
# ========================================
# Configuration for sending protocol emails to customers
SMTP_HOST=smtp.m1.websupport.sk
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=info@blackrent.sk
SMTP_PASS=your-email-password-here
SMTP_FROM_NAME=BlackRent System
EMAIL_SEND_PROTOCOLS=true

# ========================================
# üîç MONITORING & LOGGING
# ========================================
# Sentry Error Tracking (optional)
SENTRY_DSN_BACKEND=your-sentry-dsn-here
VERSION=1.0.0

# ========================================
# üõ†Ô∏è DEVELOPMENT OPTIONS
# ========================================
# Skip database migrations on startup (faster restarts)
RUN_MIGRATIONS=false 