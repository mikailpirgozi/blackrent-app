  "scripts": {
    "dev": "nodemon src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "setup": "./setup-postgres.sh",
    "setup-db": "psql -U postgres -c \"CREATE DATABASE blackrent;\" 2>/dev/null || echo \"Databáza už existuje\"",
    "backup": "node backup.js",
    "restore": "node restore.js",
    "list-backups": "ls -la backups/",
    "test-data": "node create-test-data.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate:auth": "bash scripts/run-migration.sh",
    "seed:auth": "ts-node scripts/seed-auth-system.ts",
    "test:auth": "ts-node scripts/test-auth-system.ts",
    "setup:auth": "npm run migrate:auth && npm run seed:auth && npm run test:auth"
  },
